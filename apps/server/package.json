{
  "name": "@stump/server",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "check": "cargo check",
    "start": "cargo run --release",
    "dev": "cargo watch -x run",
    "build": "pnpm get-client && cargo build --release && pnpm move-client",
    "get-client": "trash \"client/*\" \"!client/.placeholder\" && cpy \"../web/dist/**/*\" ./client/",
    "move-client": "trash ../../target/release/client && cp -r ./client ../../target/release/client",
    "fmt": "cargo fmt --all  --manifest-path=./Cargo.toml --",
    "benchmarks": "cargo test --benches",
    "test": "cargo test"
  }
}